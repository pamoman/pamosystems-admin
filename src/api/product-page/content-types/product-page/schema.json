{
  "kind": "collectionType",
  "collectionName": "product_pages",
  "info": {
    "singularName": "product-page",
    "pluralName": "product-pages",
    "displayName": "Product Page",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true
    },
    "slug": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "hide": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": false
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_pages"
    },
    "parents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-page.product-page",
      "inversedBy": "subpages"
    },
    "subpages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-page.product-page",
      "mappedBy": "parents"
    },
    "page": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "dynamiczone",
      "components": [
        "page.icon",
        "page.hero",
        "page.heading"
      ]
    },
    "content": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "dynamiczone",
      "components": [
        "content.wysiwyg",
        "content.video",
        "content.slideshow",
        "content.image",
        "content.heading"
      ]
    }
  }
}
